<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorGray</item>
        <item name="colorControlNormal">@color/colorGray</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--main-->

    <style name="button_view_main" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>


    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorTextAppearance</item>
    </style>

    <!--bill-->
    <style name="button_in_bill" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="vertical_line_in_bill" parent="@android:style/Widget">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@color/colorBlack</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="image_button_search" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>


    <style name="text_view_out_of_stock" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/bg_out_of_stock</item>
        <item name="android:text">@string/out_of_stock</item>
    </style>

    <style name="button_circle_plus" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/custom_button_circle</item>
        <item name="android:src">@drawable/icon_add_white_36dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="button_circle_subtract" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/custom_btn_subtract_circle</item>
        <item name="android:src">@drawable/icon_red_subtract_24dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="image_view_cart" parent="@android:style/Widget">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/icon_cart</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="image_view_point_to_right" parent="@android:style/Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/icon_arrow_point_to_right</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="img_btn_drink" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_btn_drink</item>
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/round_local_drink_24</item>
        <item name="android:contentDescription">@string/drinks</item>
    </style>

    <style name="img_btn_food" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_btn_food</item>
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/round_fastfood_24</item>
        <item name="android:contentDescription">@string/food</item>
    </style>

    <style name="img_btn_liquor" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_btn_liquor</item>
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/icon_bottle_of_wine</item>
        <item name="android:contentDescription">@string/liquor</item>
    </style>

    <style name="img_btn_flower" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_btn_flower</item>
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/icon_flower</item>
        <item name="android:contentDescription">@string/flowers</item>
    </style>

    <style name="text_item_service" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="text_view_quantity_product" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/bg_text_quantity</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
    </style>

    <style name="horizontal_line" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorGray</item>
    </style>

    <style name="img_price_old_to_new" parent="@android:style/Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/icon_arrow_right_black_18dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="img_back" parent="@android:style/Widget.ImageButton">
        <item name="android:src">@drawable/round_arrow_back_24</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="text_product_name" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">ten san pam</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_old_price" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">12,000d</item>
        <item name="android:textColor">@color/colorOldPrice</item>
    </style>

    <style name="text_new_price" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">12,000d</item>
        <item name="android:textColor">@color/colorNewPrice</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_total_money" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">12,000d</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
