<?xml version="1.0" encoding="utf-8"?><!--<android.support.design.widget.CoordinatorLayout--><!--xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:app="http://schemas.android.com/apk/res-auto"--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content"--><!--android:id="@+id/viewProductInStore">-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewProductInStore"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:paddingBottom="13dp"
    android:paddingEnd="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="70dp"
        android:layout_height="80dp"
        app:cardCornerRadius="5dp">

        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/test_img" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_marginEnd="3dp">

        <TextView
            android:id="@+id/tvNameProduct"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack" />

            <ImageView
                android:id="@+id/imgDisCount"
                style="@style/img_price_old_to_new" />

            <TextView
                android:id="@+id/tvDisCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorNewPrice" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            >

            <ImageView
                style="@style/image_view_cart" />

            <TextView
                android:id="@+id/tvNumberOfPurchases"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorBlack" />
        </LinearLayout>


    </LinearLayout>

    <ImageButton
        android:id="@+id/btnSubtract"
        style="@style/button_circle_subtract"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/tvQualityProductInCraftOrder"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        style="@style/text_view_quantity_product"
        android:layout_gravity="center_vertical"/>

    <ImageButton
        android:id="@+id/btnPlus"
        style="@style/button_circle_plus"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/tvOutOfStock"
        style="@style/text_view_out_of_stock"
        android:layout_gravity="center_vertical"
         />

</LinearLayout><!--</android.support.design.widget.CoordinatorLayout>-->

