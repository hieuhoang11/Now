<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.example.hieuhoang.now.View.HotProduct.HotProductsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        >

        <ImageButton
            android:id="@+id/btnBackHotProducts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_back_black_24dp"
            android:scaleType="centerCrop"
            android:background="@color/colorTransparent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hot"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:paddingLeft="15dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvHotProducts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:background="@color/colorGridView"
        >

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
