<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:background="@color/colorTransparent"
    android:id="@+id/viewItemStore">

    <android.support.v7.widget.CardView
        android:layout_width="75dp"
        android:layout_height="85dp"
        app:cardCornerRadius="5dp"
        >
        <ImageView
            android:id="@+id/imgItemService"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/test_img"
            android:scaleType="centerCrop"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4"
        android:paddingLeft="10dp"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/tvNameStoreItemService"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên cửa hàng"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tvAddressStoreItemService"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textColor="@color/colorText"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tvPriceStoreItemService"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="giá"
            android:textColor="@color/colorBlack"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tvPromotionStoreItemService"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="khuyến mãi"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <ImageView
        style="@style/image_view_point_to_right" />
</LinearLayout>